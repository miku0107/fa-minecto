<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
  <h2>Users search for "<%= @word %>"</h2>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%#= image_tag user.get_profile_image(50, 50) %></td>
          <td>
              <%= link_to user_path(user) do %>
                  <%= user.name %>
              <% end %>
              </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがPostの時 -->
    <tbody>
    <h2>Post search for "<%= @word %>"</h2>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to user_path(post.user.id) do %>
            <%#= image_tag book.user.get_profile_image(50, 50) %>
            <%= post.user.name %>
          <% end %>
        </td>
        <td><%= link_to post.text , post_path(post.id) %></td>
        </tr>
      <% end %>
    </tbody>
    
  <% end %>
</table>