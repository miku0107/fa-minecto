<h1>user edit</h1>
    
    <%= form_with model: @user do |f| %>
    <h3>プロフィールを編集</h3>
    
    <div>
        <%= f.submit "保存" %>
    </div>
    
    <div>
        <%= f.file_field :profile_image %>
    </div>
    
    <div>
        <%#= f.file_field :header_image %>
    </div>
    
    <div class="form-group">
        <%= f.text_field :name, placeholder: "ユーザーネーム" %>
    </div>
    
    <div>
        <%= f.text_area :bio, placeholder: "自己紹介" %>
    </div>
    
    <div>
        <%= f.text_field :location, placeholder: "場所" %>
    </div>
    
    <div>
        <%= f.label :birth_date, "生年月日" %><br>
        <%= raw sprintf(
            f.date_select(
              :birth_date,
              use_month_numbers: true,
              start_year: 1900,
              end_year: (Time.now.year - 5),
              default: Date.new(2000, 1, 1),
              date_separator: '%s'),
            '年 ', '月 ') + '日' %>
        
        <%#= raw sprintf(
                f.date_select (
                    :birth_date, 
                    use_month_number: true,
                    start_year: 1900,
                    end_year: 2100,
                    default: Date.new(2000, 1, 1),
                    date_separator: '%s'),
                    '年 ', '月 ') + '日' %>
    </div>
    
    <% end %>